<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/background">
        <color android:color="@color/progress_bar_green_background"/>
    </item>

    <item android:id="@+id/progress">
        <clip>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/progress_bar_green"
                android:endColor="@color/progress_bar_red"
                android:angle="0"/>
        </shape>
        </clip>

    </item>
</layer-list>