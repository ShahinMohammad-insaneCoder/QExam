<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_large"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_default"
    android:paddingTop="@dimen/padding_default"
    android:paddingEnd="@dimen/padding_default"
    android:paddingBottom="@dimen/padding_small">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvReportTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_small"
        android:text="@string/report_this_group"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/text_size_large"
        app:fontFamily="@font/roboto_bold" />

    <RadioGroup
        android:id="@+id/rgReportGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbImageViolation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:lineSpacingExtra="@dimen/line_spacing_regular"
            android:padding="@dimen/padding_small"
            android:text="@string/posting_photos_with_erotic_or_pornographic_content"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/text_size_regular"
            app:fontFamily="@font/roboto" />

        <RadioButton
            android:id="@+id/rbContentViolation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/line_spacing_regular"
            android:padding="@dimen/padding_small"
            android:text="@string/content_offensive_for_other_users"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/text_size_regular"
            app:fontFamily="@font/roboto" />

        <RadioButton
            android:id="@+id/rbSpamming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/line_spacing_regular"
            android:padding="@dimen/padding_small"
            android:text="@string/distributing_spam"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/text_size_regular"
            app:fontFamily="@font/roboto" />
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etUserComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        app:fontFamily="@font/roboto"
        android:textSize="@dimen/text_size_regular"
        android:textColor="@color/primary_text_color"
        android:hint="@string/write_something_specific"
        android:lineSpacingExtra="@dimen/line_spacing_regular"
        android:lines="5"
        android:maxLines="5"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_toStartOf="@id/tvSubmitReport"
            android:paddingStart="@dimen/padding_default"
            android:paddingTop="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_default"
            android:paddingBottom="@dimen/padding_small"
            app:textAllCaps="true"
            android:text="@android:string/cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_regular"
            app:fontFamily="@font/roboto_bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSubmitReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@color/transparent"
            android:paddingStart="@dimen/padding_default"
            android:paddingTop="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_default"
            android:paddingBottom="@dimen/padding_small"
            android:text="@string/submit"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_regular"
            app:fontFamily="@font/roboto_bold" />


    </RelativeLayout>
</androidx.appcompat.widget.LinearLayoutCompat>