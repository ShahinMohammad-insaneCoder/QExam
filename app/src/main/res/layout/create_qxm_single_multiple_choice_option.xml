<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlMultipleChoiceOptionHolder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/rbMultipleChoiceOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etMultipleChoiceOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/multiple_choice_option"
        android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
        android:fontFamily="@font/roboto"
        android:textSize="@dimen/text_size_regular"
        android:background="@color/transparent"
        android:layout_toEndOf="@id/rbMultipleChoiceOption"
        android:layout_toStartOf="@id/ivDeleteMcqOption"
        android:layout_centerVertical="true"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDeleteMcqOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_clear"
        app:tint="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/padding_extra_small"/>

</RelativeLayout>